# APEX API - Environment Variables Template
# Copy this to .env and fill in your values

# Server
PORT=3000
NODE_ENV=development

# Database (PostgreSQL)
DATABASE_URL=postgresql://user:password@host:5432/database
PGSSL=1

# Authentication (Cognito)
OIDC_AUTHORITY=https://cognito-idp.REGION.amazonaws.com/REGION_POOL_ID
OIDC_CLIENT_ID=your_client_id
OIDC_CLIENT_SECRET=your_client_secret

# CORS
CORS_ORIGIN=http://localhost:3000

# Azure API Management (APIM)
APIM_HOST=https://your-apim.azure-api.net
APIM_SUBSCRIPTION_KEY=your_subscription_key
APIM_OPERATION=/chat/strong

# Azure Document Intelligence (ADI)
ADI_ANALYZE_PATH=/di/analyze/:modelId
ADI_API_VERSION=2024-07-31-preview
ADI_BASE=/di
ADI_MODEL_ID_DEFAULT=prebuilt-read
ADI_MODEL_ID_INVOICE=prebuilt-invoice
ADI_MODEL_ID_LAYOUT=prebuilt-layout
ADI_MODEL_ID_RECEIPT=prebuilt-receipt
ADI_RESULT_PATH=/di/results/:modelId/:resultId
ADI_STRING_INDEX_TYPE=utf16CodeUnit

# Azure Blob Storage
STORAGE_ACCOUNT=your_storage_account
STORAGE_ACCOUNT_KEY=your_storage_key
STORAGE_CONTAINER=your_container
SAS_EXPIRY_HOURS=2

# OpenAI
OPENAI_API_KEY=sk-proj-your_key_here

# Other Settings
OUTPUT_DIR=/tmp
OVERWRITE_BLOB=true
RESULTS_POLL_INTERVAL=1
