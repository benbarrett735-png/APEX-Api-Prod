{
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": "src",
    "module": "ESNext",
    "target": "ES2022",
    "moduleResolution": "Bundler",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "lib": ["ES2022"],
    "types": ["node"]
  },
  "include": ["src/index.ts", "src/middleware/**/*.ts"],
  "exclude": ["node_modules", "dist", "src/routes", "src/services", "src/db", "src/lib", "src/clients", "src/utils"]
}
