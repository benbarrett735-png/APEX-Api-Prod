{
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": "src",
    "module": "ESNext",
    "target": "ES2022",
    "moduleResolution": "Bundler",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "lib": ["ES2022"],
    "types": ["node"]
  },
  "include": ["src/**/*.ts"],
  "exclude": [
    "dist",
    "node_modules",
    "scripts",
    "src/routes/agentic*.ts",
    "src/routes/reports.ts",
    "src/routes/charts.ts",
    "src/routes/research*.ts",
    "src/services/chartService.ts",
    "src/services/agenticFlow.ts",
    "src/services/researchFlow.ts"
  ]
}
